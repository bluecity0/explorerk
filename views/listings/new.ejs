<%layout("/layouts/boilerplate")%>
  <div class="row">
    <div class="col-8 offset-2">
      <br><br>
      <h3>Create a new lisitng</h3>
      <!-- ERROR MESSAGE -->
      <% if (typeof error !=="undefined" ) { %>
        <p style="color:red">
          <%= error %>
        </p>
        <% } %>

          <br>
          <form action="/listings" class="needs-validation" method="post" novalidate enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title" class="form-label" req>Title</label>
              <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required />
              <div class="invalid-feedback">
                Enter a valid title!
              </div>
              <div class="valid-feedback">
                Title looks good!
              </div>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control" required></textarea>
              <div class="invalid-feedback">
                Please enter a short description!
              </div>
              <div class="valid-feedback">
                description looks good!
              </div>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Upload Listing Image</label>
              <input name="listing[image]" placeholder="enter image url/Link" type="file" class="form-control" required/>
            </div>
            <div class="row">
              <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200" class="form-control" required />
                <div class="invalid-feedback">
                  Price should be valid!
                </div>
                <div class="valid-feedback">
                  Price looks good!
                </div>
              </div>
              <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
                <div class="invalid-feedback">
                  Country should be valid!
                </div>
                <div class="valid-feedback">
                  Country looks good!
                </div>
              </div>
              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Jaipur" type="text" class="form-control" required />
                <div class="invalid-feedback">
                  Location should be valid!
                </div>
                <div class="valid-feedback">
                  Location looks good!
                </div>
              </div>
              <br><br>
              <button class="btn btn-dark add-btn">Add</button>
              <br><br>
          </form>
    </div>
  </div>